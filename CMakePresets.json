{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Ninja",
            "hidden": true,
            "displayName": "Ninja Multi-Config",
            "description": "Configure with vcpkg toolchain and generate Ninja project files for all configurations",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake"
                }
            }
        },
        {
            "name": "Clang",
            "inherits": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang.exe",
                "CMAKE_CXX_COMPILER": "clang++.exe"
            }
        },
        {
            "name": "MSVC",
            "inherits": "Ninja",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Clang (Debug)",
            "configurePreset": "Clang",
            "displayName": "Clang-cl Build Debug",
            "configuration": "Debug"
        },
        {
            "name": "Clang (Release)",
            "configurePreset": "Clang",
            "displayName": "Clang-cl Build Release",
            "configuration": "Release"
        },
        {
            "name": "MSVC (Debug)",
            "configurePreset": "MSVC",
            "displayName": "MSVC Build Debug",
            "configuration": "Debug"
        },
        {
            "name": "MSVC (Release)",
            "configurePreset": "MSVC",
            "displayName": "MSVC Build Release",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "Clang Test",
            "configurePreset": "Clang"
        },
        {
            "name": "MSVC Test",
            "configurePreset": "MSVC"
        }
    ]
}