{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "name",
        "pipeline"
    ],
    "properties": {
        "name": {
            "type": "string",
            "default": "",
            "title": "The name of material",
            "examples": [
                "Phong"
            ]
        },
        "pipeline": {
            "type": "object",
            "default": {},
            "title": "The pipeline infomation",
            "required": [
                "vs",
                "ps"
            ],
            "properties": {
                "vs": {
                    "type": "string",
                    "default": "",
                    "title": "vertex shader path",
                    "examples": [
                        "assets/shaders/phong.hlsl"
                    ]
                },
                "ps": {
                    "type": "string",
                    "default": "",
                    "title": "pixel shader path",
                    "examples": [
                        "assets/shaders/phong.hlsl"
                    ]
                },
                "primitive": {
                    "type": "string",
                    "default": "TriangleList",
                    "title": "Primitive type",
                    "enum": [
                        "PointList",
                        "LineList",
                        "LineStrip",
                        "TriangleList",
                        "TriangleStrip",
                        "LineListAdjacency",
                        "LineStripAdjacency",
                        "TriangleListAdjacency",
                        "TriangleStripAdjacency"
                    ]
                }
            },
            "examples": [
                {
                    "vs": "assets/shaders/phong.hlsl",
                    "ps": "assets/shaders/phong.hlsl",
                    "primitive": "TriangleList"
                }
            ]
        },
        "parameters": {
            "type": "array",
            "default": [],
            "title": "The parameters of material.",
            "items": {
                "type": "object",
                "title": "Material parameter",
                "required": [
                    "name",
                    "type"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "title": "The name of paramter",
                        "examples": [
                            "diffuse",
                            "ambient",
                            "specular",
                            "specular_power",
                            "skin"
                        ]
                    },
                    "type": {
                        "type": "string",
                        "title": "The type of paramter",
                        "examples": [
                            "vec4f",
                            "float",
                            "texture"
                        ],
                        "enum": [
                            "float",
                            "int32",
                            "uint32",
                            "vec2i",
                            "vec2u",
                            "vec2f",
                            "vec3i",
                            "vec3u",
                            "vec3f",
                            "vec4i",
                            "vec4u",
                            "vec4f",
                            "mat4f",
                            "texture"
                        ]
                    },
                    "default": {
                        "type": [
                            "array",
                            "number",
                            "string"
                        ],
                        "title": "The default value of paramter",
                        "items": {
                            "type": "number",
                            "title": "A Schema",
                            "examples": [
                                1.0,
                                0.8,
                                0.5,
                                0.0
                            ]
                        },
                        "examples": [
                            [
                                1.0,
                                0.8,
                                0.5,
                                1.0
                            ],
                            [
                                0.5,
                                0.8,
                                0.5,
                                1.0
                            ],
                            [
                                0.0,
                                0.8,
                                0.5,
                                1.0
                            ],
                            23.0,
                            "assets/test/test.jpg"
                        ]
                    }
                },
                "examples": [
                    {
                        "name": "diffuse",
                        "type": "vec4f",
                        "default": [
                            1.0,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "ambient",
                        "type": "vec4f",
                        "default": [
                            0.5,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "specular",
                        "type": "vec4f",
                        "default": [
                            0.0,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "specular_power",
                        "type": "float",
                        "default": 23.0
                    },
                    {
                        "name": "skin",
                        "type": "texture",
                        "default": "assets/test/test.jpg"
                    }
                ]
            },
            "examples": [
                [
                    {
                        "name": "diffuse",
                        "type": "vec4f",
                        "default": [
                            1.0,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "ambient",
                        "type": "vec4f",
                        "default": [
                            0.5,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "specular",
                        "type": "vec4f",
                        "default": [
                            0.0,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "specular_power",
                        "type": "float",
                        "default": 23.0
                    },
                    {
                        "name": "skin",
                        "type": "texture",
                        "default": "assets/test/test.jpg"
                    }
                ]
            ]
        }
    },
    "examples": [
        {
            "name": "Phong",
            "pipeline": {
                "vs": "assets/shaders/phong.hlsl",
                "ps": "assets/shaders/phong.hlsl",
                "primitive": "TriangleList"
            },
            "parameters": [
                {
                    "name": "diffuse",
                    "type": "vec4f",
                    "default": [
                        1.0,
                        0.8,
                        0.5,
                        1.0
                    ]
                },
                {
                    "name": "ambient",
                    "type": "vec4f",
                    "default": [
                        0.5,
                        0.8,
                        0.5,
                        1.0
                    ]
                },
                {
                    "name": "specular",
                    "type": "vec4f",
                    "default": [
                        0.0,
                        0.8,
                        0.5,
                        1.0
                    ]
                },
                {
                    "name": "specular_power",
                    "type": "float",
                    "default": 23.0
                },
                {
                    "name": "skin",
                    "type": "texture",
                    "default": "assets/test/test.jpg"
                }
            ]
        }
    ]
}