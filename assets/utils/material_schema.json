{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "name",
        "vertex_shader",
        "pixel_shader",
        "primitive"
    ],
    "properties": {
        "name": {
            "type": "string",
            "default": "",
            "title": "The name Schema",
            "examples": [
                "Phong"
            ]
        },
        "vertex_shader": {
            "type": "string",
            "default": "",
            "title": "vertex shader path",
            "examples": [
                "assets/shaders/phong.hlsl"
            ]
        },
        "pixel_shader": {
            "type": "string",
            "default": "",
            "title": "pixel shader path",
            "examples": [
                "assets/shaders/phong.hlsl"
            ]
        },
        "primitive": {
            "type": "string",
            "default": "",
            "title": "Primitive type",
            "examples": [
                "TriangleList"
            ],
            "enum": [
                "PointList",
                "LineList",
                "LineStrip",
                "TriangleList",
                "TriangleStrip",
                "LineListAdjacency",
                "LineStripAdjacency",
                "TriangleListAdjacency",
                "TriangleStripAdjacency"
            ]
        },
        "parameters": {
            "type": "array",
            "default": [],
            "title": "The parameters of material.",
            "items": {
                "type": "object",
                "title": "Material parameter",
                "required": [
                    "name",
                    "type",
                    "default"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "title": "The name Schema",
                        "examples": [
                            "diffuse",
                            "ambient",
                            "specular",
                            "specular_power",
                            "skin"
                        ]
                    },
                    "type": {
                        "type": "string",
                        "title": "The type Schema",
                        "examples": [
                            "vec4f",
                            "float",
                            "texture"
                        ]
                    },
                    "default": {
                        "type": [
                            "array",
                            "number",
                            "string"
                        ],
                        "title": "The default Schema",
                        "items": {
                            "type": "number",
                            "title": "A Schema",
                            "examples": [
                                1.0,
                                0.8,
                                0.5,
                                0.0
                            ]
                        },
                        "examples": [
                            [
                                1.0,
                                0.8,
                                0.5,
                                1.0
                            ],
                            [
                                0.5,
                                0.8,
                                0.5,
                                1.0
                            ],
                            [
                                0.0,
                                0.8,
                                0.5,
                                1.0
                            ],
                            23.0,
                            "assets/test/test.jpg"
                        ]
                    }
                },
                "examples": [
                    {
                        "name": "diffuse",
                        "type": "vec4f",
                        "default": [
                            1.0,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "ambient",
                        "type": "vec4f",
                        "default": [
                            0.5,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "specular",
                        "type": "vec4f",
                        "default": [
                            0.0,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "specular_power",
                        "type": "float",
                        "default": 23.0
                    },
                    {
                        "name": "skin",
                        "type": "texture",
                        "default": "assets/test/test.jpg"
                    }
                ]
            },
            "examples": [
                [
                    {
                        "name": "diffuse",
                        "type": "vec4f",
                        "default": [
                            1.0,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "ambient",
                        "type": "vec4f",
                        "default": [
                            0.5,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "specular",
                        "type": "vec4f",
                        "default": [
                            0.0,
                            0.8,
                            0.5,
                            1.0
                        ]
                    },
                    {
                        "name": "specular_power",
                        "type": "float",
                        "default": 23.0
                    },
                    {
                        "name": "skin",
                        "type": "texture",
                        "default": "assets/test/test.jpg"
                    }
                ]
            ]
        }
    },
    "examples": [
        {
            "name": "Phong",
            "vertex_shader": "assets/shaders/phong.hlsl",
            "pixel_shader": "assets/shaders/phong.hlsl",
            "primitive": "TriangleList",
            "parameters": [
                {
                    "name": "diffuse",
                    "type": "vec4f",
                    "default": [
                        1.0,
                        0.8,
                        0.5,
                        1.0
                    ]
                },
                {
                    "name": "ambient",
                    "type": "vec4f",
                    "default": [
                        0.5,
                        0.8,
                        0.5,
                        1.0
                    ]
                },
                {
                    "name": "specular",
                    "type": "vec4f",
                    "default": [
                        0.0,
                        0.8,
                        0.5,
                        1.0
                    ]
                },
                {
                    "name": "specular_power",
                    "type": "float",
                    "default": 23.0
                },
                {
                    "name": "skin",
                    "type": "texture",
                    "default": "assets/test/test.jpg"
                }
            ]
        }
    ]
}